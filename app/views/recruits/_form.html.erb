<%= form_with(model: recruit) do |form| %>
  <% if recruit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recruit.errors.count, "error") %> prohibited this recruit from being saved:</h2>

      <ul>
        <% recruit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= form.label :"名前" %>
  <%= form.text_field :name, placeholder: "山田太郎" %>
</div>

<div class="field">
  <%= form.label :"金額" %>
  <%= form.text_field :money, placeholder: "10000" %>
</div>

<div class="field">
  <%= form.label :"詳細" %>
  <%= form.text_area :detail, placeholder: "スノーボード歴5年" %>
</div>


    <div class="form-group">
    <%= form.label :"教える内容" %><br>
    <% @labels.each do |label| %>
      <%= check_box_tag "recruit[label_ids][]", label.id.to_s, @recruit.labels.include?(label) %>　　
      <%= label.name %><br>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :"開始日" %>
    <%= form.date_field :start_day %>
  </div>

  <div class="field">
    <%= form.label :"終了日" %>
    <%= form.date_field :end_day %>
  </div>

  <div class="field">
    <%= form.label :"スキー場" %>
    <%= form.collection_select :skiresort_id, Skiresort.all, :id, :name %>
  </div>


  <div class="actions">
    <%= form.submit :"登録"%>
  </div>
<% end %>

