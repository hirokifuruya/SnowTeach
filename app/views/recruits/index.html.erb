
<h1>投稿一覧</h1>

<%= form_tag(recruits_path, method: :get) do %>
  <div>
    <%= label_tag(:search, "検索") %>
    <%= text_field_tag(:search) %>
  </div>

  <div>
    <%= label_tag(:skiresort_id, "スキー場") %>
    <%= select_tag(:skiresort_id, options_from_collection_for_select(Skiresort.all, :id, :name)) %>
  </div>

  <div>
    <%= label_tag(:label_ids, "ラベル") %><br>
    <% Label.all.each do |label| %>
      <%= check_box_tag "label_ids[]", label.id, params[:label_ids]&.include?(label.id.to_s) %>
      <%= label.name %>
    <% end %>
  </div>

  <div>
    <%= submit_tag("検索") %>
  </div>
<% end %>


<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>お金</th>
      <th>詳細</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>スキー場</th>
      <th>教える内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recruits.each do |recruit| %>
      <tr>
        <td><%= recruit.name %></td>
        <td><%= recruit.money %></td>
        <td><%= recruit.detail %></td>
        <td><%= recruit.start_day.strftime('%Y/%m/%d') if recruit.start_day %></td>
        <td><%= recruit.end_day.strftime('%Y/%m/%d') if recruit.end_day %></td>
        <td><%= recruit.skiresort.name %></td>
        <td>
            <% recruit.labels.each do |label| %>
              <%= label.name %>
            <% end %>
        </td>
        <td><%= link_to '詳細', recruit %></td>
        <td><%= link_to '編集', edit_recruit_path(recruit) %></td>
        <td><%= link_to '削除', recruit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_recruit_path %>
<%= link_to 'マイページ',  user_session_path %>