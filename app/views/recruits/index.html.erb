
<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>お金</th>
      <th>詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recruits.each do |recruit| %>
      <tr>
        <td><%= recruit.name %></td>
        <td><%= recruit.money %></td>
        <td><%= recruit.detail %></td>
        <td><%= link_to '詳細', recruit %></td>
        <td><%= link_to '編集', edit_recruit_path(recruit) %></td>
        <td><%= link_to '削除', recruit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_recruit_path %>
