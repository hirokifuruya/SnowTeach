<h1>マイページ</h1>
<p>メールアドレス: <%= @user.email %></p>
<p>権限: <%= @user.role.name %></p>

<table>
  <thead>
  <tr>
    <h3>予約した募集</h3>
    <% if @requests.any? %>
        <th>名前</th>
        <th>お金</th>
        <th>詳細</th>
        <th>スキー場</th>
        <th>予約日</th>
        <th>承認　</th>
        <th colspan="3"></th>
  </tr>
  </thead>
    <tbody>
        <% @requests.each do |request| %>
        <tr>
          <td><%= request.recruit.name %></td>
          <td><%= request.recruit.money %></td>
          <td><%= request.recruit.detail %></td>
          <td><%= request.recruit.skiresort.name %></td>
          <td><%= request.date %></td>
          <td><%= request.status %></td>
        </tr>
        <% end %>
        <% else %>
          <p>現在、予約した募集はありません。</p>
        <% end %>
    </tbody>
</table>
<div class="row">
  <div class="col-md-6">
    <h3>お気に入りしている講師</h3>
    <div>
      <% @user.favorites.each do |favorite| %>
        <p><%= favorite.followed.email %></p>
      <% end %>
    </div>
    <% if current_user.role_id == 3 && @user.role_id == 2 %>
      <%= render 'users/favorite', user: @user %>
    <% end %>
</div>
<%= link_to '投稿一覧画面', recruits_path %>