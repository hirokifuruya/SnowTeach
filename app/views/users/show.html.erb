<h1>マイページ</h1>
<p>メールアドレス: <%= @user.email %></p>
<p>権限: <%= @user.role.name %></p>

<div class="row">
  <div class="col-md-6">
    <h3>フォロー中</h3>
    <div>
      <% @user.following.each do |following_user| %>
        <p><%= following_user.email %></p>
      <% end %>
    </div>
    <%= render 'users/follow', user: @user %>
  </div>
  <div class="col-md-6">
    <h3>フォロワー</h3>
    <div>
      <% @user.followers.each do |followers_user| %>
        <p><%= followers_user.email %></p>
      <% end %>
    </div>
    <% if @user.followers.any? %>
      <ul class="list-unstyled">
        <% @user.followers.each do |user| %>
          <li>
            <%= render 'users/follow', user: user %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>フォロワーはいません。</p>
    <% end %>
  </div>
</div>

<%= link_to '投稿一覧画面', recruits_path %>

